<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/padding_list">

    <Button
        android:id="@+id/button_favourite_customer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:textColor="@color/favourite_star"
        android:textSize="@dimen/size_favourite_customer" />

    <TextView
        android:id="@+id/detail_customerlist_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/margin_standard_right"
        android:layout_weight="6"
        android:gravity="center_vertical"
        android:singleLine="true" />

    <Button
        android:id="@+id/detail_customerlist_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_standard_right"
        android:layout_weight="1"
        android:background="@drawable/detail_customerlist_button"
        android:focusable="false"
        android:textColor="@color/white"
        android:textSize="@dimen/size_icon_button" />

    <Button
        android:id="@+id/detail_customerlist_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/detail_customerlist_button"
        android:focusable="false"
        android:textColor="@color/white"
        android:textSize="@dimen/size_icon_button" />
</LinearLayout>