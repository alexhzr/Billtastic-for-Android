<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/padding_list"
        android:gravity="center_vertical">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/button_favourite_customer"
            android:focusable="false"
            android:textSize="@dimen/size_favourite_customer"
            android:background="@android:color/transparent"
            android:textColor="@color/favourite_star"/>

        <TextView
            android:layout_marginRight="@dimen/margin_standard_right"
            android:layout_width="0dp"
            android:singleLine="true"
            android:layout_height="match_parent"
            android:id="@+id/detail_customerlist_name"
            android:layout_weight="6"
            android:gravity="center_vertical"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/detail_customerlist_email"
            android:layout_weight="1"
            android:background="@drawable/detail_customerlist_button"
            android:textSize="@dimen/size_icon_button"
            android:textColor="@color/white"
            android:focusable="false"
            android:layout_marginRight="@dimen/margin_standard_right"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/detail_customerlist_phone"
            android:layout_weight="1"
            android:background="@drawable/detail_customerlist_button"
            android:textSize="@dimen/size_icon_button"
            android:textColor="@color/white"
            android:focusable="false"
            />
    </LinearLayout>
</LinearLayout>